<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence">
  <persistence-unit name="supermarket">
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    <class>sample.entity.DanhmucEntity</class>
    <class>sample.entity.GiohangEntity</class>
    <class>sample.entity.HoadonEntity</class>
    <class>sample.entity.KhachhangEntity</class>
    <class>sample.entity.NhanvienEntity</class>
    <class>sample.entity.SanphamEntity</class>
    <properties>
      <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/supermaketdb"/>
      <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
      <property name="hibernate.connection.username" value="admin"/>
      <property name="hibernate.connection.password" value="admin"/>
      <property name="hibernate.archive.autodetection" value="class"/>
      <property name="hibernate.show_sql" value="true"/>
      <property name="hibernate.format_sql" value="true"/>
      <property name="hbm2ddl.auto" value="update"/>
    </properties>
  </persistence-unit>
</persistence>
